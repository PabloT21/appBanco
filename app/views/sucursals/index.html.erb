<p style="color: green"><%= notice %></p>

<h1>Sucursales</h1>

<div id="sucursals">
<div class="container-fluid d-flex flex-wrap">
  <% @sucursals.each do |sucursal| %>
    <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <div class="align-items-center">
          
          <%= render sucursal %>
          <span>
          <%= link_to "Ver sucursal", sucursal, class: "btn btn-info" %>
          </span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  </div>

  <% if can? :create, Sucursal %> 
    <%= link_to "Nueva sucursal", new_sucursal_path, class:"btn btn-success" %> 
  <% end %>

  </div>